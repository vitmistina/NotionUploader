meta {
  name: Refresh token
  type: http
  seq: 3
}

post {
  url: https://www.strava.com/api/v3/oauth/token
  body: json
  auth: inherit
}

body:json {
  {
          "client_id": "{{STRAVA_CLIENT_ID}}",
          "client_secret": "{{STRAVA_CLIENT_SECRET}}",
          "grant_type": "refresh_token",
          "refresh_token": "{{refresh_token}}"
    }
}

settings {
  encodeUrl: true
}
